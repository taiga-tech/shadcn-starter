{
    "$schema": "https://turbo.build/schema.json",
    "ui": "tui",
    "tasks": {
        "dev": {
            "cache": false,
            "persistent": true
        },
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["$TURBO_DEFAULT$", ".env*"],
            "outputs": [".next/**", "!.next/cache/**", "storybook-static/**"]
        },
        "lint": {
            "dependsOn": ["^lint"]
        },
        "check-types": {
            "dependsOn": ["^check-types"]
        },
        "test": {
            "dependsOn": ["^test"],
            "outputs": []
        },
        "test:unit": {
            "dependsOn": ["^test:unit"],
            "outputs": ["coverage/**"]
        },
        "test:integration": {
            "dependsOn": ["^test:integration"],
            "outputs": []
        },
        "test:e2e": {
            "dependsOn": ["^test:e2e", "build"],
            "outputs": []
        },
        "test:all": {
            "dependsOn": ["test:unit", "test:integration", "test:e2e"],
            "outputs": []
        }
    }
}
