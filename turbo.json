{
    "$schema": "https://turbo.build/schema.json",
    "ui": "tui",
    "globalDependencies": ["VERCEL_URL", "ANALYZE"],
    "globalEnv":  ["VERCEL_URL", "ANALYZE"],
    "tasks": {
        "dev": {
            "cache": false,
            "persistent": true
        },
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["$TURBO_DEFAULT$", ".env*", "VERCEL_URL"],
            "outputs": [".next/**", "!.next/cache/**", "storybook-static/**"],
            "env":  ["VERCEL_URL", "ANALYZE"]
        },
        "lint": {
            "dependsOn": ["^lint", "//#lint:ls"],
            "env":  ["VERCEL_URL", "ANALYZE"]
        },
        "//#lint:ls": {
            "cache": false,
            "inputs": [
                "**/*.{ts,tsx,js,jsx,mjs,json,md,mdx,css,scss,sass,html,yml,yaml,toml}",
                "!**/node_modules/**",
                "!**/.next/**",
                "!**/storybook-static/**"
            ]
        },
        "check-types": {
            "dependsOn": ["^check-types"]
        },
        "test": {
            "dependsOn": ["^test"],
            "outputs": []
        },
        "test:unit": {
            "dependsOn": ["^test:unit"],
            "outputs": ["coverage/**"]
        },
        "test:integration": {
            "dependsOn": ["^test:integration"],
            "outputs": []
        },
        "test:e2e": {
            "dependsOn": ["^test:e2e", "build"],
            "outputs": []
        },
        "test:all": {
            "dependsOn": ["test:unit", "test:integration", "test:e2e"],
            "outputs": []
        }
    }
}
